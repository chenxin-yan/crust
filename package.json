{
	"name": "crust",
	"private": true,
	"scripts": {
		"build": "turbo run build --filter='./packages/*'",
		"build:docs": "turbo run build --filter='./apps/docs'",
		"dev": "turbo run dev --filter='./packages/*'",
		"dev:docs": "turbo run dev --filter='./apps/docs'",
		"check": "biome check",
		"check:types": "turbo run check:types",
		"test": "turbo run test",
		"changeset": "changeset",
		"packages:version": "changeset version && bun update",
		"packages:release": "bun run packages:publish && changeset tag",
		"packages:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish --access public --no-git-checks || true); done"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@biomejs/biome": "2.4.4",
		"@types/bun": "^1.3.9",
		"turbo": "^2.8.10",
		"typescript": "5.9.3"
	},
	"catalog": {
		"bunup": "^0.16.29",
		"typescript": "^5"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.9",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
